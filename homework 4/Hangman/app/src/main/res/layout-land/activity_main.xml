            android:id="@+id/btnH"
            android:text="@string/h"
            android:layout_row="1"
            android:layout_column="2"
            android:textAlignment="center"
            android:fontFamily="casual"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:visibility="visible" />

        <Button
