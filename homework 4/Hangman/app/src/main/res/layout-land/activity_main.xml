            android:visibility="visible" />

    </GridLayout>

    <RelativeLayout
        android:id="@+id/relHangman"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginEnd="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/left_arm"
            android:id="@+id/left_arm"
            android:layout_above="@+id/left_leg"
            android:layout_alignStart="@+id/left_leg"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/left_leg"
            android:id="@+id/left_leg"
            android:layout_marginTop="43dp"
            android:layout_below="@+id/right_arm"
            android:layout_alignEnd="@+id/body"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/head"
            android:id="@+id/head"
            android:layout_marginLeft="134dp"
            android:layout_marginTop="23dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/left_leg"
            android:id="@+id/right_arm"
            android:layout_below="@+id/head"
            android:layout_alignStart="@+id/body"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/body"
            android:id="@+id/body"
            android:layout_marginLeft="134dp"
            android:layout_alignBottom="@+id/left_leg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="49dp"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/right_leg"
            android:id="@+id/right_leg"
            android:layout_alignBottom="@+id/left_leg"
            android:layout_alignEnd="@+id/right_arm"
            android:visibility="invisible" />

        <TextView
            android:text="_ _ _ _ "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtWordLand"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</RelativeLayout>
